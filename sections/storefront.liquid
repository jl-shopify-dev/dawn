<div class="storefront">
  <img class="storefront-image" src="{{ section.settings.storefront_image | img_url: 'master' }}">
  <div class="storefront-info ">
    <h2>{{ shop.name }}</h2>
    <p>{{ shop.description }}</p>
    <a href="{{ shop.secure_url }}">{{ shop.secure_url }}</a>
    <a href="mailto: {{ shop.email }}">{{ shop.email }}</a>
    <p>{{ shop.address.summary }}</p>
    <p>{{ shop.phone }}</p>
  </div>
</div>

{% schema %}
{
  "name": "Storefront",
  "class": "storefront-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "storefront_image",
      "label": "Storefront Image"
    }
  ],
  "presets": [
    {
      "name": "Storefront"
    }
  ]
}
{% endschema %}

{% stylesheet %}

.storefront {
  --storefront-height: 500px;
  position: relative;
  height: var(--storefront-height);
}

.storefront-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-items: center;
  
  position: absolute;
  bottom: 50%;
  left: 50%;
  width: 50vw;
  transform: translate(-50%, 50%);
  background-color: rgb(var(--color-base-accent-1));
  opacity: 1;
}
.storefront-info > * {
  color: white;
}

.storefront-image {
  width: 100%;
  height: 100%;
  margin: auto;
  object-fit: cover;
  object-position: center;
}

.menu-page-width {
  --max-page-width: 1140px;
  width: 100%;
  max-width: var(--max-page-width);
  padding-left: 1.5rem;
  padding-right: 1.5rem;
  margin-left: auto;
  margin-right: auto;
}

{% endstylesheet %}

